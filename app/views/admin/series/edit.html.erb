<h1 class="text-2xl font-bold mb-6">Modifier la série</h1>

<%= form_with model: [:admin, @serie], local: true do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block font-semibold mb-2" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block font-semibold mb-2" %>
    <%= form.text_area :description, class: "w-full border border-gray-300 rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :url, class: "block font-semibold mb-2" %>
    <%= form.text_field :url, class: "w-full border border-gray-300 rounded p-2" %>
  </div>

  <%= form.submit "Mettre à jour", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>
