

<h1 class="text-3xl font-bold mb-6">Administration des Séries</h1>

<table class="min-w-full table-auto bg-white shadow-md rounded">
  <thead>
    <tr class="bg-gray-200 text-left">
      <th class="p-4">Titre</th>
      <th class="p-4">Description</th>
      <th class="p-4">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @series.each do |serie| %>
      <tr class="border-t">
        <td class="p-4"><%= serie.title %></td>
        <td class="p-4"><%= truncate(serie.description, length: 80) %></td>
        <td class="p-4 space-x-2">
          <%= link_to "Modifier", edit_admin_series_path(serie), class: "text-blue-600 hover:underline" %>
          <%= link_to "Supprimer", admin_series_path(serie), method: :delete, data: { confirm: "Supprimer cette série ?" }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>






