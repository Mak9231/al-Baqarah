<h1 class="text-2xl font-bold mb-4">Gestion des séries</h1>

<% @series.each do |serie| %>
  <div class="mb-4 p-4 bg-gray-100 rounded shadow">
    <h2 class="text-xl font-semibold"><%= serie.title %></h2>
    <p class="text-gray-700 mb-2"><%= serie.description %></p>
    <%= link_to "Modifier", edit_admin_series_path(serie), class: "text-blue-600 mr-4" %>
    <%= link_to "Supprimer", admin_series_path(serie), method: :delete, data: { confirm: "Êtes-vous sûr ?" }, class: "text-red-600" %>
  </div>
<% end %>
