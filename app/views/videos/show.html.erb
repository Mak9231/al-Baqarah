<h1>Videos#show</h1>
<p>Find me in app/views/videos/show.html.erb</p>


<div class="max-w-3xl mx-auto bg-white p-6 rounded shadow">

  <h1 class="text-4xl font-bold mb-4"><%= @video.title %></h1>
  <iframe width="100%" height="400" src="<%= @video.url %>" frameborder="0" allowfullscreen></iframe>
  <p class="mt-6"><%= @video.description %></p>
  <%= link_to "Retour à la liste", videos_path, class: "text-blue-600 hover:underline mt-4 block" %>
</div>


<% if serie.video.attached? %>
  <video controls class="w-full h-64 rounded-lg">
    <source src="<%= url_for(serie.video) %>" type="<%= serie.video.content_type %>">
    Votre navigateur ne supporte pas la lecture vidéo.
  </video>
<% end %>
