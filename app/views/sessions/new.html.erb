


<div class="max-w-md mx-auto mt-20 p-6 bg-white shadow rounded">
  <h1 class="text-2xl font-bold mb-4">Connexion admin</h1>
  <%= form_with url: login_path, method: :post, local: true do %>
    <div class="mb-4">
      <%= label_tag :password, "Mot de passe", class: "block text-sm font-medium text-gray-700" %>
      <%= password_field_tag :password, nil, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
    </div>
    <%= submit_tag "Se connecter", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  <% end %>
</div>
