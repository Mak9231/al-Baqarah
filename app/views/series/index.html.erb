  <div class="max-w-7xl mx-auto px-6">
    <h1 class="text-5xl font-extrabold text-center text-emerald-900 drop-shadow-sm mb-16 tracking-tight" data-aos="fade-down">
      ðŸ“º Nos SÃ©ries Inspirantes
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
      <% @series.each_with_index do |serie, index| %>
        <div class="bg-white rounded-3xl shadow-xl hover:shadow-2xl transition duration-300 overflow-hidden transform hover:-translate-y-1 cursor-pointer"
             data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
          <% if serie.file_name.present? %>
            <div onclick="openLightbox('/videos/<%= serie.file_name %>')">
              <video class="w-full h-60 object-cover" muted>
                <source src="/videos/<%= serie.file_name %>" type="video/mp4">
              </video>
            </div>


          <% else %>
            <img src="<%= serie.thumbnail_url.presence || 'https://source.unsplash.com/600x400/?quran,islam' %>"
                 class="w-full h-60 object-cover" />
          <% end %>
          <div class="p-6">
            <h2 class="text-2xl font-bold text-emerald-800 mb-2 flex items-center gap-2">
              <i data-lucide="tv" class="w-5 h-5 text-yellow-500"></i> <%= serie.title %>
            </h2>
            <p class="text-gray-600 text-base"><%= truncate(serie.description, length: 100) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Lightbox overlay -->
  <div id="lightbox" class="fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50 hidden">
    <div class="relative w-full max-w-5xl p-4">
      <button onclick="closeLightbox()" class="absolute top-3 right-4 text-white text-4xl font-bold hover:scale-125 transition">&times;</button>
      <video id="lightboxVideo" controls autoplay class="w-full rounded-xl shadow-2xl"></video>
    </div>
  </div>

  <script>
    lucide.createIcons();
    function openLightbox(src) {
      const lightbox = document.getElementById("lightbox");
      const video = document.getElementById("lightboxVideo");
      video.src = src;
      lightbox.classList.remove("hidden");
    }

    function closeLightbox() {
      const lightbox = document.getElementById("lightbox");
      const video = document.getElementById("lightboxVideo");
      video.pause();
      video.src = "";
      lightbox.classList.add("hidden");
    }
  </script>
</section>
