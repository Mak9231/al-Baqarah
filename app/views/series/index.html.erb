<div class="text-right mb-6">
  <a href="<%= new_series_path %>" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">+ Nouvelle Série</a>
</div>



 <!-- Page Séries -->
  <section class="py-20 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-extrabold text-blue-800 mb-4">Nos Séries</h2>
      <p class="text-lg text-gray-700 mb-6">Découvrez nos séries éducatives qui explorent
      les thèmes spirituels et les enseignements du Coran.</p>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mt-10 text-left">
        <% @series.each do |serie| %>
          <div class="bg-white rounded-xl shadow-md hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 p-6 relative">
            <% if serie.created_at > 1.week.ago %>
              <span class="absolute top-4 right-4 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full">Nouveau</span>
            <% end %>
            <h5 class="text-xl font-semibold text-gray-900 mb-2"><%= serie.title %></h5>
            <p class="text-gray-700 mb-4"><%= serie.description %></p>
            <% if serie.respond_to?(:episodes_count) %>
              <p class="text-sm text-gray-500 mb-2"><%= pluralize(serie.episodes_count, 'épisode') %></p>
            <% end %>
            <a href="<%= series_path(serie) %>" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors duration-200">Voir la série</a>
          </div>
        <% end %>
      </div>
    </div>
  </section>
