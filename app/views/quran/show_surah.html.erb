<div class="container">


<div class="mb-10 text-center">
  <h2 class="text-2xl font-semibold mb-4 text-green-700">🎧 Écouter la récitation</h2>
  <audio controls class="mx-auto w-full md:w-2/3">
    <source src="https://cdn.islamic.network/quran/audio-surah/128/ar.alafasy/<%= @surah["number"] %>.mp3" type="audio/mpeg">
    Votre navigateur ne supporte pas l'audio HTML5.
  </audio>
</div>

<% @surah["verses"].each_with_index do |verse, index| %>
  <div class="mb-8 border-b pb-4">
    <p class="text-right text-4xl md:text-5xl font-arabic leading-loose tracking-wide text-green-900">
      <%= verse["arabic"] %>
    </p>
    <p class="mt-2 text-gray-700 italic text-base md:text-lg"><%= verse["french"] %></p>
    <p class="text-sm text-green-500 text-right">Verset <%= index + 1 %></p>
  </div>
<% end %>




<!--Suivant/précedent -->
<div class="flex justify-between mt-12 text-center">
  <% if @surah_number > 1 %>
    <%= link_to "← Sourate précédente", quran_path(@surah_number - 1), class: "px-4 py-2 bg-green-200 rounded hover:bg-green-300" %>
  <% else %>
    <span class="text-gray-400 px-4 py-2">← Début</span>
  <% end %>

  <% if @surah_number < @total_surahs %>
    <%= link_to "Sourate suivante →", quran_path(@surah_number + 1), class: "px-4 py-2 bg-green-200 rounded hover:bg-green-300" %>
  <% else %>
    <span class="text-gray-400 px-4 py-2">Fin →</span>
  <% end %>
</div>


</div>






