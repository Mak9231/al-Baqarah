<%= form_with(model: lesson, class: "space-y-6") do |form| %>
  <div>
    <%= form.label :title, class: "block font-semibold text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div>
    <%= form.label :content, class: "block font-semibold text-gray-700" %>
    <%= form.text_area :content, rows: 10, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div>
    <%= form.submit class: "bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700" %>
  </div>
<% end %>
